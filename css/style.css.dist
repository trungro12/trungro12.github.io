body {
    min-height: 500px;
    width: 100%;
    background: linear-gradient(-45deg, #ee7752, #e73c7e, #5e2392, #23d5ab);
}

@media only screen and (min-width: 1100px) {
    body {
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
        /* text-align: center; */
    }
}

a {
    text-decoration: none !important;
}

.entry-title {
    text-align: center;
}

.entry-title .fa-solid,
.fas {
    margin-right: 5px;
}

.entry-title h1 {
    padding: 18px;
}

.item h1,
.item h2 {
    display: inline;
    font-size: 15px;
    padding-left: 4px;
    vertical-align: inherit;
    display: contents;
}

#loadTool,
.voucher-content {
    margin: 20px auto;
}

#loadTool h3,
.voucher-content h3 {
    margin: 10px auto;
}

